Vagrant.configure("2") do |config|

  config.vm.box = "{$opSystem}"
  config.vm.hostname = "{$hostName}"
  config.vm.network "public_network" , bridge: "{$netCard}"

  config.vm.provider "virtualbox" do |vb|
     vb.cpus = {$cpuNum}
     vb.memory = "{$memNum}"
     vb.name = "{$hostName}"
  end

end
